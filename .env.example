# ==========================================
# 基础环境配置
# ==========================================
# 运行环境: development(开发) / production(生产)
NODE_ENV=development
# 应用名称
APP_NAME=fm_tools
# 应用监听主机 (0.0.0.0 表示允许外网访问)
APP_HOST=0.0.0.0
# 应用监听端口
APP_PORT=3000
# 网站备案号 (若有)
ICP_NO=

# ==========================================
# MySQL 数据库配置
# ==========================================
# 数据库主机地址
MYSQL_HOST=
# 数据库端口
MYSQL_PORT=3306
# 数据库用户名
MYSQL_USER=root
# 数据库密码
MYSQL_PASSWORD=
# 数据库名称
MYSQL_DATABASE=
# 连接池最大连接数
MYSQL_CONN_LIMIT=10

# ==========================================
# Redis 缓存配置
# ==========================================
# Redis 主机地址
REDIS_HOST=
# Redis 端口
REDIS_PORT=6379
# Redis 密码
REDIS_PASSWORD=
# Redis 数据库索引 (0-15)
REDIS_DB=0
